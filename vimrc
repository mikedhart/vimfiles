
" => Syntax highlighting
syntax on

" => Colour scheme
colorscheme vividchalk

" => Tab settings
set smartindent
set tabstop=4
set shiftwidth=4

" => CtrlP
set runtimepath^="C:/Program Files (x86)/Vim/vimfiles/autoload/ctrlp.vim"
execute pathogen#infect()

" => Enable wildmenu
set wildmenu
set wildignore=*.tmpl.php,*.tpl.php

" => Don't backup files, it's all done by git
set nobackup
set nowb
set noswapfile

" => Always show status line
set laststatus=2

" => Spell checker
map <leader>ss :setlocal spell!<cr>

" => Allow backspaces
set backspace=2

" => Highligh searches
set hlsearch
set incsearch

" => Show line numbers
set number

" => Emmet key map
let g:user_emmet_expandabbr_key = '<c-e>'
let g:use_emmet_complete_tag = 1

" => Always cd to dir of editing file
set autochdir
